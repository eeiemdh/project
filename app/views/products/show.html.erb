<p id="notice"><%= notice %></p>
<% answers_i =0 %>
<h1 id="Report_heading"> Survey Results</h2>
 <div id="background_report">
 <div class="row">
 <div class="span3 offset3">
   <br />
   <br />
   <br />
   <br />
 <table class="show_table1">
   <th>
     <tr>
       <td class="summary" colspan="3" >
         Customer Details
        </td>

     </tr>
     </th>

   <tr>
     <td> Customer Name</td>
     <td> <%=current_user.FirstName %>
   <%= current_user.LastName %>
     </td>
     </tr>
   <tr>
     <td> Email</td>
    <td> <%=  current_user.email %></td>
    </tr>
   <tr>
     <td> Product Title</td>
     <td>  <%= @product.product_url %></td>
   </tr>
 </table>

<br />

<table id="table_summary">
  <tr>
    <td class="summary" colspan="3"> Summary</td>
  <tr>
    <td>Total Questions </td>
    <td>Total Answers</td>
    <td>Total Comments</td>
  </tr>
  <tr>
    <td> <%=  @questions.count %></td>
    <% @questions.each do |question| %>
        <% @answer.each do |answer| %>
            <%  if answer.question_id == question.id %>
                <% answers_i +=1 %>
                <%end %>
           <% end %>
      <% end %>
    <td> <%=  answers_i%>
    <td> <%=  @comment.count %></td>
  </tr>
</table>
   <br />




<table id="show_tableQA">

  <tr>
    <td id="url" align="center" colspan="2"> Questions & Answers</td>
    <% @questions.each do |question| %>
      <tr>
      <td> <%= "Question:" %> <%= question.content %></td>
       </tr>


  <% @answer.each do |answer| %>
      <tr>
        <%  if answer.question_id == question.id %>
        <td id="answer_border"> <%= "Answer:" %> <%= answer.content %></td>
        </tr> <% answers_i +=1 %>
        <% end %>
      <% end %>
  <% end %>
</table>
<br />
<table id="comments_table">
<tr>
    <td id="url" align="center" colspan="2"> Comments</td>
  <% @comment.each do |comment| %>
      <tr>

        <td> <%= "Comment:" %> <%= comment.content %></td>
      </tr>
  <% end %>

</table>



