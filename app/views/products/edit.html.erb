
<div id="edit_div">
<h1> Editing Products</h1>
  <div id="video_place">
  <%= video_player({:file=>@product.video.url.to_s}) %>
  </div>
   <%= form_for @product  do |f| %>

       <% if @product.errors.any? %>
           <div id="error_explanation">
             <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

             <ul>
               <% @product.errors.full_messages.each do |msg| %>
                   <li><%= msg %></li>
               <% end %>
             </ul>

           <%end %>

      <div class="field">
        <%= f.label :Product_Title  %><br />
        <%= f.text_field :product_url %>
         </div>


          <%= f.fields_for :questions do |builder| %>
              <%= render "questions_fields", :f => builder %>
          <% end %>
     <br/> <%=  link_to_add_fields "Add Question", f, :questions %> </br>
         <%= f.fields_for :comments do |builder| %>
          <%= render "comments_fields", :f => builder %> <br/>
      <% end %>




       <div class="actions">
         <%= f.submit %>
       </div>
   <% end %>

</div>

<%= link_to 'Back', products_path %>
</div>
